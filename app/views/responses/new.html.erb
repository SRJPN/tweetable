<div class="row app-new-response-container">
	<div id="timeout_alert">
	</div>
	<div class="app-response-timer col-sm-12">
		<img src="/assets/timer.png" alt="">
		<span class="count" id="app-remaining-time"><%= remaining_time %></span>
	</div>
	<div class="app-exercise-container col-sm-12">
		<div class="header">
			<%= content_tag :h3 do %>
					<%= exercise.title %>
			<% end %>
		</div>
		<div class="app-exercise-text">
			<%= simple_format(exercise.text) %>
		</div>
		<%= render 'form', response: response, exercise: exercise, user: user %>
	</div>
	<div class="col-sm-12">
	</div>
</div>
